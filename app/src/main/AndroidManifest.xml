<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.frost.memorygamepokemon">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/pokeball"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pokeball"
        android:supportsRtl="true"
        android:theme="@style/Theme.MemoryGamePokemon">
        <activity
            android:name=".ui.BoardActivity"
            android:exported="false" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6484756253190029~2573625937"/>
    </application>

</manifest>